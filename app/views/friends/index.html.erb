<% @page_title = "友達一覧" %>
<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "友達の新規登録", :new_friend %></div>

<% if @friends.present? %>
  <table class="list">
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.id %></td>
          <td><%= link_to friend.name, friend%> </td>
          <td>
            <%= link_to "編集", [:edit, friend] %>
          </td>
          <td>
          <%= link_to "削除", friend, method: :delete, data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>